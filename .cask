# Install native apps
brew tap phinze/homebrew-cask
brew install brew-cask

# Additional taps for fonts and beta releases
brew tap caskroom/versions
brew tap caskroom/fonts

function installcask() {
	brew cask install "${@}" 2> /dev/null
}

installcask alfred
installcask bittorrent-sync
installcask dropbox
installcask firefox
installcask font-source-code-pro
installcask github
installcask gmail-notifr
installcask google-chrome
installcask name-mangler
installcask skype
installcask spotify
installcask sublime-text3
installcask the-unarchiver
installcask transmission
installcask transmit
installcask unrarx
installcask vagrant
installcask virtualbox
installcask vlc

# Make cask apps available to Alfred
brew cask alfred link
